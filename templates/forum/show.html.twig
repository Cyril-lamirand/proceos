{% extends 'base.html.twig' %}

{% block title %}Forum{% endblock %}

{% block body %}
    <h1 class="big-titles">Forum</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ forum.id }}</td>
            </tr>
            <tr>
                <th>Label</th>
                <td>{{ forum.label }}</td>
            </tr>
        </tbody>
    </table>

    <a class="btn back-button" href="{{ path('forum_index') }}">back to list</a>

    <a class="btn update-button" href="{{ path('forum_edit', {'id': forum.id}) }}"><i class="fas fa-pen"></i></a>

    {{ include('forum/_delete_form.html.twig') }}
{% endblock %}
