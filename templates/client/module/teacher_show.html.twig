{% extends 'client/base-client.html.twig' %}

{% block content %}
    <div class="container">
        <h2>{{ module.label }}</h2>
        <hr/>
        <div class="row">
            {% for course in module.courses %}
            <div class="col-12 col-lg-4">
                <div>
                    <div class="text-center">
                        <h3>{{ course.title }}</h3>
                    </div>
                    <hr/>
                    <p>Lorem ipsum dolor sit amet, consectetur adipisicing elit. Accusantium ad blanditiis consequatur corporis eaque esse illo nam neque non, officiis? Autem culpa nulla quam rem sapiente! Alias labore mollitia voluptas.</p>
                    <div class="mb-3 d-flex justify-content-center">
                        <a href="{{path('app_client_course_show', {id:course.id})}}" class="quizzBtn">
                            Voir le cours
                        </a>
                    </div>
                </div>
                <hr/>
            </div>
            {% endfor %}
        </div>
        <hr/>
        <div>
            <h4>Questionnaire d'entrée</h4>
        </div>
        <hr/>
        <div>
           <ul>
               {% for work in module.quiz.quizWorks %}
               <li>
                   <p>Fait par : {{work.user.firstName}} {{work.user.lastName}} le {{work.createdAt|date('d/m/Y')}} à {{work.createdAt|date('h:m')}}</p>
                   <a href="{{path('quiz_work_detail', {id:work.id})}}">Voir les réponses</a>
               </li>
               {% endfor %}
           </ul>
        </div>
    </div>
{% endblock %}
