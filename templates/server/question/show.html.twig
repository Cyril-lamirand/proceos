{% extends './server/base.html.twig' %}

{% block title %}Question{% endblock %}

{% block body %}
    <h1 class="big-titles">Question</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ question.id }}</td>
            </tr>
            <tr>
                <th>Label</th>
                <td>{{ question.label }}</td>
            </tr>
            <tr>
                <th>Type</th>
                <td>{{ question.type }}</td>
            </tr>
            <tr>
                <th>Placeholder</th>
                <td>{{ question.placeholder }}</td>
            </tr>
        </tbody>
    </table>

    <a class="btn back-button" href="{{ path('question_index') }}">back to list</a>

    <a class="btn update-button" href="{{ path('question_edit', {'id': question.id}) }}"><i class="fas fa-pen"></i></a>

    {{ include('server/question/_delete_form.html.twig') }}
{% endblock %}
