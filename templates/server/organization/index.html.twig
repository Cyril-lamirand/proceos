{% extends './server/base.html.twig' %}

{% block title %}Organization index{% endblock %}

{% block body %}
<h1 class="big-titles">Organizations</h1>
<a class="btn btn-success create-new" href="{{ path('organization_new') }}">Create new</a>

<table class="table">
    <thead>
    <tr>
        <th>Id</th>
        <th>Label</th>
        <th>Logo</th>
        <th>actions</th>
    </tr>
    </thead>
    <tbody>
    {% if organizations is not null %}
        {% for organization in organizations %}
            {% if organization is not null %}
                <tr>
                    <td>{{ organization.id }}</td>
                    <td>{{ organization.label }}</td>
                    <td>
                        {% if organization.logo is not null %}
                        <img src="{{asset('/uploads/organizations/'~ organization.logo)}}" alt="logo {{organization.label}}" style="width:100px;">
                        {% endif %}
                    </td>
                    <td>
                        <a class="btn btn-success" href="{{ path('organization_show', {'id': organization.id}) }}"><i
                                class="far fa-eye"></i></a>
                        <a class="btn btn-success" href="{{ path('organization_edit', {'id': organization.id}) }}"><i
                                class="fas fa-pen"></i></a>
                    </td>
                </tr>
            {% endif %}
        {% endfor %}
    {% else %}
    <tr class="table-line">
        <td colspan="3">no records found</td>
    </tr>
    {% endif %}
    </tbody>
</table>

{% endblock %}
