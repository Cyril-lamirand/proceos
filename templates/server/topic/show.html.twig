{% extends './server/base.html.twig' %}

{% block title %}Topic{% endblock %}

{% block body %}
    <h1 class="big-titles">Topic</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ topic.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ topic.title }}</td>
            </tr>
            <tr>
                <th>Createdat</th>
                <td>{{ topic.createdat ? topic.createdat|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a class="btn back-button" href="{{ path('topic_index') }}">back to list</a>

    <a class="btn update-button" href="{{ path('topic_edit', {'id': topic.id}) }}"><i class="fas fa-pen"></i></a>

    {{ include('server/topic/_delete_form.html.twig') }}
{% endblock %}
