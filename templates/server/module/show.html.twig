{% extends './server/base.html.twig' %}

{% block title %}Module{% endblock %}

{% block body %}
    <h1 class="big-titles">Module</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ module.id }}</td>
            </tr>
            <tr>
                <th>Createdat</th>
                <td>{{ module.createdat ? module.createdat|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ module.label }}</td>
            </tr>
        </tbody>
    </table>

    <a class="btn back-button" href="{{ path('module_index') }}">back to list</a>

    <a class="btn update-button" href="{{ path('module_edit', {'id': module.id}) }}"><i class="fas fa-pen"></i></a>

    {{ include('server/module/_delete_form.html.twig') }}
{% endblock %}
