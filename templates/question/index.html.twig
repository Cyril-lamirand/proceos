{% extends 'base.html.twig' %}

{% block title %}Question index{% endblock %}

{% block body %}
<h1>Questions</h1>
<a class="btn btn-success" href="{{ path('question_new') }}">Create new</a>

<table class="table">
    <thead>
    <tr>
        <th>Id</th>
        <th>Label</th>
        <th>Type</th>
        <th>Placeholder</th>
        <th>actions</th>
    </tr>
    </thead>
    <tbody>
    {% for question in questions %}
    <tr>
        <td>{{ question.id }}</td>
        <td>{{ question.label }}</td>
        <td>{{ question.type }}</td>
        <td>{{ question.placeholder }}</td>
        <td>
            <a class="btn btn-success" href="{{ path('question_show', {'id': question.id}) }}"><i
                    class="far fa-eye"></i></a>
            <a class="btn btn-success" href="{{ path('question_edit', {'id': question.id}) }}"><i
                    class="fas fa-pen"></i></a>
        </td>
    </tr>
    {% else %}
    <tr>
        <td colspan="5">no records found</td>
    </tr>
    {% endfor %}
    </tbody>
</table>

{% endblock %}
