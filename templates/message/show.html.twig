{% extends 'base.html.twig' %}

{% block title %}Message{% endblock %}

{% block body %}
    <h1 class="big-titles">Message</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ message.id }}</td>
            </tr>
            <tr>
                <th>Content</th>
                <td>{{ message.content }}</td>
            </tr>
            <tr>
                <th>Createdat</th>
                <td>{{ message.createdat ? message.createdat|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a class="btn back-button" href="{{ path('message_index') }}">back to list</a>

    <a class="btn update-button" href="{{ path('message_edit', {'id': message.id}) }}"><i class="fas fa-pen"></i></a>

    {{ include('message/_delete_form.html.twig') }}
{% endblock %}
