{% extends 'base.html.twig' %}

{% block title %}Message index{% endblock %}

{% block body %}
<h1 class="big-titles">Messages</h1>
<a class="btn btn-success create-new" href="{{ path('message_new') }}">Create new</a>

<table class="table">
    <thead>
    <tr>
        <th>Id</th>
        <th>Content</th>
        <th>Createdat</th>
        <th>actions</th>
    </tr>
    </thead>
    <tbody>
    {% for message in messages %}
    <tr>
        <td>{{ message.id }}</td>
        <td>{{ message.content }}</td>
        <td>{{ message.createdat ? message.createdat|date('Y-m-d H:i:s') : '' }}</td>
        <td>
            <a class="btn btn-success" href="{{ path('message_show', {'id': message.id}) }}"><i class="far fa-eye"></i></a>
            <a class="btn btn-success" href="{{ path('message_edit', {'id': message.id}) }}"><i class="fas fa-pen"></i></a>
        </td>
    </tr>
    {% else %}
    <tr>
        <td colspan="4">no records found</td>
    </tr>
    {% endfor %}
    </tbody>
</table>

{% endblock %}
