{% extends 'base.html.twig' %}

{% block title %}Organization index{% endblock %}

{% block body %}
<h1>Organizations</h1>
<a class="btn btn-success" href="{{ path('organization_new') }}">Create new</a>

<table class="table">
    <thead>
    <tr>
        <th>Id</th>
        <th>Label</th>
        <th>actions</th>
    </tr>
    </thead>
    <tbody>
    {% for organization in organizations %}
    <tr>
        <td>{{ organization.id }}</td>
        <td>{{ organization.label }}</td>
        <td>
            <a class="btn btn-success" href="{{ path('organization_show', {'id': organization.id}) }}"><i
                    class="far fa-eye"></i></a>
            <a class="btn btn-success" href="{{ path('organization_edit', {'id': organization.id}) }}"><i
                    class="fas fa-pen"></i></a>
        </td>
    </tr>
    {% else %}
    <tr>
        <td colspan="3">no records found</td>
    </tr>
    {% endfor %}
    </tbody>
</table>

{% endblock %}
