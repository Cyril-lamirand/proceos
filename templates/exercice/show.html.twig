{% extends 'base.html.twig' %}

{% block title %}Exercice{% endblock %}

{% block body %}
    <h1>Exercice</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ exercice.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ exercice.title }}</td>
            </tr>
            <tr>
                <th>Content</th>
                <td>{{ exercice.content }}</td>
            </tr>
            <tr>
                <th>Createdat</th>
                <td>{{ exercice.createdat ? exercice.createdat|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Datelimit</th>
                <td>{{ exercice.datelimit ? exercice.datelimit|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Contentbeginner</th>
                <td>{{ exercice.contentbeginner }}</td>
            </tr>
            <tr>
                <th>Contentintermediate</th>
                <td>{{ exercice.contentintermediate }}</td>
            </tr>
            <tr>
                <th>Contentexpert</th>
                <td>{{ exercice.contentexpert }}</td>
            </tr>
        </tbody>
    </table>

    <a class="btn btn-primary" href="{{ path('exercice_index') }}">back to list</a>

    <a href="{{ path('exercice_edit', {'id': exercice.id}) }}"><i class="fas fa-pen"></i></a>

    {{ include('exercice/_delete_form.html.twig') }}
