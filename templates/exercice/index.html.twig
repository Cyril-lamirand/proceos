{% extends 'base.html.twig' %}

{% block title %}Exercice index{% endblock %}

{% block body %}
    <h1>Exercice index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Content</th>
                <th>Createdat</th>
                <th>Datelimit</th>
                <th>Contentbeginner</th>
                <th>Contentintermediate</th>
                <th>Contentexpert</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for exercice in exercices %}
            <tr>
                <td>{{ exercice.id }}</td>
                <td>{{ exercice.title }}</td>
                <td>{{ exercice.content }}</td>
                <td>{{ exercice.createdat ? exercice.createdat|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ exercice.datelimit ? exercice.datelimit|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ exercice.contentbeginner }}</td>
                <td>{{ exercice.contentintermediate }}</td>
                <td>{{ exercice.contentexpert }}</td>
                <td>
                    <a href="{{ path('exercice_show', {'id': exercice.id}) }}">show</a>
                    <a href="{{ path('exercice_edit', {'id': exercice.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="9">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('exercice_new') }}">Create new</a>
{% endblock %}
